@page
@model ITGlobersTest.Pages.Editoriales.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Editorial</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Editorial.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Editorial.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Editorial.Sede)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Editorial.Sede)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Editorial.Libros)
        </dt>
        <dd class="col-sm-10">
            <table>
                @foreach (var libro in Model.Editorial.Libros)
                {
                    <tr>
                        <td>@libro.Id</td>
                        <td>@libro.Titulo</td>
                        <td>@libro.Sinopsis</td>
                        <td>@libro.Paginas</td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Editorial.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
