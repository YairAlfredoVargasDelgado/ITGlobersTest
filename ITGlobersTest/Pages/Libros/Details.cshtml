@page
@model ITGlobersTest.Pages.Libros.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro.Sinopsis)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Sinopsis)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Libro.Paginas)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Libro.Paginas)
        </dd>
        @if (Model.Libro.Editorial != null)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Libro.Editorial.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Libro.Editorial.Nombre)
            </dd>
        }
        @if (Model.Libro.Autores.Count > 0)
        {
            <dt class="col-sm-2">
                Autores
            </dt>
            <dd class="col-sm-10">
                <thead><th>@Html.DisplayNameFor(model => model.Libro.Autores[0].Nombre)</th></thead>
                <table>
                    @foreach (var autor in Model.Libro.Autores)
                    {
                        <tr>
                            <td>@autor.Nombre @autor.Apellidos</td>
                        </tr>
                    }
                </table>
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Libro.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
